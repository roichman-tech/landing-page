---
import type { FooterContent } from '@/app/i18n/home';

interface Props {
  content: FooterContent;
}

const { content } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="py-12 bg-secondary/30 border-t border-border/50">
  <div class="container">
    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
      <div class="flex flex-col items-center md:items-start gap-4">
        <img
          src="/images/logo.webp"
          width={235}
          height={56}
          alt="Roichman Tech"
          class="h-8 w-auto"
        />
        <p class="text-sm text-muted-foreground text-center md:text-left">
          {content.tagline}
          <br />
          {content.location}
        </p>
      </div>

      <div class="flex flex-col items-center md:items-end gap-3">
        <h3 class="text-sm font-semibold text-foreground">
          {content.contactHeading}
        </h3>
        <div
          class="flex flex-col items-center md:items-end gap-1 text-sm text-muted-foreground"
        >
          <a
            href="mailto:contact@roichman.tech"
            class="hover:text-primary transition-colors"
          >
            contact@roichman.tech
          </a>
          <a
            href="mailto:matheus@roichman.tech"
            class="hover:text-primary transition-colors"
          >
            matheus@roichman.tech
          </a>
        </div>
      </div>
    </div>

    <div class="my-8 h-px bg-border"></div>

    <div
      class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-muted-foreground"
    >
      <p>&copy; {currentYear} {content.rights}</p>
    </div>
  </div>
</footer>
