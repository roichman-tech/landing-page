{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["react", "react-dom"],
							":BLANK_LINE:",
							":PACKAGE:",
							":BLANK_LINE:",
							":NODE:",
							":BLANK_LINE:",
							"@/app/**",
							":BLANK_LINE:",
							"@/view/**",
							":BLANK_LINE:",
							":PATH:",
							":BLANK_LINE:",
							"**"
						]
					}
				}
			}
		}
	}
}
